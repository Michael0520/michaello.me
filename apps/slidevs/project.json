{
  "name": "slidevs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/slidevs",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "slidev 2025-06-29/src/slides.md",
        "cwd": "apps/slidevs"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/dist",
        "{workspaceRoot}/apps/portfolio/public/talks"
      ],
      "options": {
        "command": "sh build-all.sh",
        "cwd": "apps/slidevs",
        "parallel": false
      },
      "configurations": {
        "production": {}
      }
    },
    "copy-to-portfolio": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "outputs": ["{workspaceRoot}/apps/portfolio/public/talks"],
      "options": {
        "commands": [
          "mkdir -p apps/portfolio/public/talks",
          "rm -rf apps/portfolio/public/talks/*",
          "cp -r apps/slidevs/dist/talks/* apps/portfolio/public/talks/ || echo 'No talks to copy'"
        ],
        "parallel": false
      }
    },
    "export": {
      "executor": "nx:run-commands",
      "options": {
        "command": "slidev export 2025-06-29/src/slides.md --output ../../dist/2025-06-29.pdf",
        "cwd": "apps/slidevs"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vue-tsc --noEmit",
        "cwd": "apps/slidevs"
      }
    }
  },
  "tags": ["type:app", "platform:slidev"]
}
